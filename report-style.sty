\usepackage{amsfonts}     % 插入数学字体
\usepackage{amsmath}      % 插入数学公式
\usepackage{amssymb}      % 插入数学符号
\usepackage{siunitx}      % 插入单位

% 图形绘图相关
\usepackage{graphicx}     % 插入图片
\usepackage{tikz}         % 绘制图表
\usepackage{booktabs}     % 生成表格
\usepackage{caption}      % 设置标题
\usepackage{subcaption}   % 插入子图表标题
