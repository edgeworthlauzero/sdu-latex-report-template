\usepackage{cleveref}     % 重定义引用
\usepackage{cite}         % 管理参考文献引用



% 页面样式设置
\geometry{
    left=3.00cm,
    right=3.00cm,
    top=2.50cm,
    bottom=2.50cm
}

% 超链接设置
\hypersetup{
    hidelinks,
    colorlinks=true,
    linkcolor=blue,
    filecolor=blue,      
    urlcolor=blue,
    citecolor=cyan,
}

% 代码高亮设置
\setminted{
    linenos,
    breaklines,
	frame=single,
	tabsize=4,
	encoding=utf8,
}

% 标题与引用前缀设置
\renewcommand{\listingscaption}{代码}
\crefname{listing}{代码}{代码}
\crefname{figure}{图}{图}
\crefname{table}{表}{表}
